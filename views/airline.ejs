<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Airline</title>
    <script src="https://use.fontawesome.com/71f27b38fa.js"></script>
  	<!-- Compiled and minified CSS -->
  	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
  	<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  	<link rel="stylesheet" href="./css/style.css">
    <!-- <link rel="stylesheet" href="../public/css/style.css"> -->
  </head>

  <body>
    <nav>
    <div class="nav-wrapper grey darken-3">
      <a href="#" class="brand-logo center grey darken-3 light-blue-text text-accent-3">Travel Dash</a>
      <!-- <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li><a href="sass.html">Sass</a></li>
      </ul> -->
    </div>
  </nav>
  <div class="container">

    <!-- UPCOMING FLIGHTS  -->
    <div class="row col s12">
      <h5>Upcoming Flights </h5>
    </div>
    <div class="upcoming-flights">
      <table>
      <thead>
        <tr>
            <th>Airline</th>
            <th>Flight ID</th>
            <th>Departure City/Country</th>
            <th>Arrival City/Country</th>
        </tr>
      </thead>
      <tbody>
        <% for(let i=0; i<flights.length; i++){ %>
        <tr>
          <td><%= flights[i].airline %></td>
          <td><%= flights[i].id %></td>
          <td><%= flights[i].departure %></td>
          <td><%= flights[i].arrival %></td>
        </tr>
        <% } %>
      </tbody>
    </table>
    </div>

    <!-- CREATE NEW FLIGHT -->
    <div class="row col s12">
      <h5>Create New Flight</h5>
    </div>

    <div class="row">
      <form class="col s12" action="/flight/create" method="post">

        <div class="row">
          <div class="input-field col s6">
            <input placeholder="Departure City/Country" id="departure" type="text" class="validate" name="departure">
            <label for="departure">Departure City/Country</label>
          </div>
          <div class="input-field col s6">
            <input placeholder="Arrival City/Country" id="arrival" type="text" class="validate" name="arrival">
            <label for="arrival">Arrival City/Country</label>
          </div>
        </div>
        <div class="row col s12new-airline-btn">
            <input type="submit" value="Create Flight" class="waves-effect waves-light btn light-blue accent-3">
        </div>

      </form>
    </div>

    <!-- END Container -->
  </div>
    <!--Import jQuery before materialize.js-->
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
  	<!-- Compiled and minified JavaScript -->
  	<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
  </body>
    <!-- insert JS script  -->
</html>
