  <div class="container">

    <!-- FORM - CREATE NEW TRIP  -->
    <div class="row col s12">
      <h5>Create a trip</h5>
    </div>

    <div class="row">
      <form class="col s12">

        <div class="row">
          <div class="input-field col s6">
            <input placeholder="Trip Title" id="title" type="text" class="validate" name="title">
            <label for="title">Title</label>
          </div>
          <div class="input-field col s6">
            <input placeholder="Destination" id="destination " type="text" class="validate" name="destination">
            <label for="destination">Destination</label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s6">
            <textarea placeholder="Description" id="description" class="materialize-textarea" name="description"></textarea>
            <label for="description">Description</label>
          </div>
          <div class="input-field col s6">
            <select id="flightList">
              <option value="" disabled selected>Choose Your Flight</option>
              <option value="flight1">Flight 1</option>
              <option value="flight2">Flight 2</option>
              <option value="flight3">Flight 3</option>
            </select>
            <label>Flight List</label>
          </div>
        </div>

      </form>
    </div>

  <div class="row col s12">
    <h5>Upcoming Trips</h5>
  </div>
  <div class="upcoming-trips">
    <table>
    <thead>
      <tr>
          <th>Trip ID</th>
          <th>Title</th>
          <th>Airline</th>
          <th>Destination</th>
          <th>Description</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td>Trip ID</td>
        <td>Trip Title</td>
        <td>American Airlines</td>
        <td>Destination</td>
